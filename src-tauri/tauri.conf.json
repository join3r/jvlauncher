{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "App Launcher",
  "version": "0.1.0",
  "identifier": "com.applauncher.dev",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "App Launcher",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "maxWidth": 2000,
        "maxHeight": 1400,
        "resizable": true,
        "center": true,
        "alwaysOnTop": true,
        "decorations": false,
        "skipTaskbar": true,
        "visible": false,
        "url": "index.html",
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:path:default",
            "dialog:allow-open",
            "dialog:allow-save",
            "shell:allow-open",
            "os:allow-platform"
          ]
        },
        {
          "identifier": "modal-windows-capability",
          "description": "Capability for modal windows (settings, add-app, edit-app)",
          "windows": ["settings", "add-app", "edit-app-*"],
          "permissions": [
            "core:default",
            "core:path:default",
            "core:window:allow-close",
            "core:window:allow-set-focus",
            "dialog:allow-open",
            "dialog:allow-save",
            "os:allow-platform"
          ]
        },
        {
          "identifier": "terminal-windows-capability",
          "description": "Capability for terminal windows",
          "windows": ["terminal_*"],
          "permissions": [
            "core:default",
            "core:event:default",
            "core:window:allow-close",
            "core:window:allow-set-focus"
          ]
        }
      ]
    },
    "withGlobalTauri": true
  },
  "plugins": {}
}

